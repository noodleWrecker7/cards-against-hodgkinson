{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "out",
    "strict": true,
    "allowJs": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "types": ["mocha", "node"],
    "lib": ["ES2020", "DOM"],
    "resolveJsonModule": true,
    "typeRoots": ["types"],
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo"
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "../node_modules",

  ]
}

