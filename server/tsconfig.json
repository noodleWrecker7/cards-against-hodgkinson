{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "out",
    "strict": true,
    "allowJs": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "types": ["mocha", "node"],
    "lib": ["ES2020", "DOM"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "../node_modules",
    "out"
  ]
}

